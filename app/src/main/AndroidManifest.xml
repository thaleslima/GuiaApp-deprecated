            android:name="br.net.guiaapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="br.net.guiaapp.ui.activity.LocalActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="br.net.guiaapp.ui.activity.LocalDetailActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
